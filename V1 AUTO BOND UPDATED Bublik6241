-- Загрузка основного скрипта
loadstring(game:HttpGet("https://raw.githubusercontent.com/Marco8642/science/refs/heads/ok/dead%20rails"))()

-- GUI
local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false
gui.Name = "BubikStartGui"

-- Чёрный фон
local bg = Instance.new("Frame", gui)
bg.Size = UDim2.new(1, 0, 1, 0)
bg.Position = UDim2.new(0, 0, 0, 0)
bg.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
bg.BorderSizePixel = 0

-- Текст по центру
local mainText = Instance.new("TextLabel", bg)
mainText.Size = UDim2.new(1, 0, 1, 0)
mainText.Position = UDim2.new(0, 0, 0, 0)
mainText.BackgroundTransparency = 1
mainText.Text = "Made by bubik6241\nPress start button and Don't press anything wait some"
mainText.TextColor3 = Color3.fromRGB(0, 255, 0)
mainText.TextScaled = true
mainText.Font = Enum.Font.SourceSansBold
mainText.TextWrapped = true

-- Таймер в левом нижнем углу
local timerLabel = Instance.new("TextLabel", bg)
timerLabel.Size = UDim2.new(0, 200, 0, 40)
timerLabel.Position = UDim2.new(0, 10, 1, -50)
timerLabel.BackgroundTransparency = 1
timerLabel.Text = "Time Left: 02:00"
timerLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
timerLabel.TextScaled = true
timerLabel.Font = Enum.Font.SourceSansBold
timerLabel.TextXAlignment = Enum.TextXAlignment.Left

-- Таймер логика
local totalTime = 120
task.spawn(function()
	while totalTime > 0 do
		local mins = math.floor(totalTime / 60)
		local secs = totalTime % 60
		timerLabel.Text = string.format("Time Left: %02d:%02d", mins, secs)
		totalTime -= 1
		wait(1)
	end
	timerLabel.Text = "Time's up!"
end)
